{# ============================================
   HEADER COMPONENT
   ============================================ #}

<header class="header {% if theme.settings.header.sticky_header %}header--sticky{% endif %}">
    <div class="header-main">
        {# Right Side - Icons #}
        <div class="header-right">
            {# Search #}
            <div class="header-icon" onclick="salla.search.open()">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
                <span>بحث</span>
            </div>

            {# Account #}
            <a href="{{ link('profile') }}" class="header-icon">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <span>حسابي</span>
            </a>

            {# Wishlist #}
            <a href="{{ link('wishlist') }}" class="header-icon">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
                <span>المفضلة</span>
                {% if wishlist.count > 0 %}
                <span class="count">{{ wishlist.count }}</span>
                {% endif %}
            </a>

            {# Cart #}
            <div class="header-icon" onclick="salla.cart.open()">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                </svg>
                <span>السلة</span>
                <span class="count" id="cart-count">{{ cart.count }}</span>
            </div>
        </div>

        {# Logo - Center #}
        <a href="{{ link('home') }}" class="logo">
            <img src="{{ store.logo }}" alt="{{ store.name }}">
        </a>

        {# Left Side - Language #}
        <div class="header-left">
            <div class="lang-switch" onclick="salla.lang.toggle()">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                </svg>
                <span>EN</span>
            </div>
        </div>
    </div>
</header>
