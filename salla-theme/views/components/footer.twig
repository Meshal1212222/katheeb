{% endif %}

{# Main Footer #}
<footer class="footer">
    <div class="footer-grid">
        {# About Column #}
        <div class="footer-col">
            <h4>{{ store.name }}</h4>
            <p style="font-size:13px;color:rgba(255,255,255,0.6);line-height:1.8;">
                {{ store.description | default('وجهتك الأولى للأزياء الفاخرة والماركات العالمية') }}
            </p>
        </div>

        {# Quick Links #}
        <div class="footer-col">
            <h4>روابط سريعة</h4>
            <a href="{{ link('about') }}">من نحن</a>
            <a href="{{ link('contact') }}">تواصل معنا</a>
            <a href="{{ link('faq') }}">الأسئلة الشائعة</a>
            <a href="{{ link('branches') }}">فروعنا</a>
        </div>

        {# Customer Service #}
        <div class="footer-col">
            <h4>خدمة العملاء</h4>
            <a href="{{ link('shipping') }}">سياسة الشحن</a>
            <a href="{{ link('returns') }}">الإرجاع والاستبدال</a>
            <a href="{{ link('privacy') }}">سياسة الخصوصية</a>
            <a href="{{ link('terms') }}">الشروط والأحكام</a>
        </div>

        {# Categories #}
        <div class="footer-col">
            <h4>الأقسام</h4>
            {% for category in categories | slice(0, 5) %}
                <a href="{{ category.url }}">{{ category.name }}</a>
            {% endfor %}
        </div>

        {# Contact & App #}
        <div class="footer-col">
            <h4>تواصل معنا</h4>
            <p style="font-size:13px;color:rgba(255,255,255,0.6);">
                {{ store.phone }}<br>
                {{ store.email }}
            </p>
            <div class="footer-apps">
                {% if store.app.ios %}
                <a href="{{ store.app.ios }}">
                    <svg viewBox="0 0 24 24"><path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/></svg>
                    App Store
                </a>
                {% endif %}
                {% if store.app.android %}
                <a href="{{ store.app.android }}">
                    <svg viewBox="0 0 24 24"><path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/></svg>
                    Google Play
                </a>
                {% endif %}
            </div>
        </div>
    </div>

    {# Footer Bottom #}
    <div class="footer-bottom">
        <div class="footer-brand">
            <img src="{{ store.logo }}" alt="{{ store.name }}">
        </div>
        <div class="footer-copyright">
            {{ theme.settings.footer.footer_text }}
        </div>
        <div class="footer-payments">
            {# Payment icons handled by Salla #}
            {{ salla.payment_icons() }}
        </div>
    </div>
</footer>
