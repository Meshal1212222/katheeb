{# ============================================
   PRODUCT CARD COMPONENT

   Usage: {% include 'components/product-card.twig' with {'product': product} %}
   ============================================ #}

<div class="product-card" data-product-id="{{ product.id }}">
    <div class="product-image">
        <a href="{{ product.url }}">
            <img src="{{ product.image }}" alt="{{ product.name }}" loading="lazy">
        </a>

        {# Badges #}
        {% if product.is_on_sale %}
            <span class="product-badge sale">{{ product.discount_percentage }}%-</span>
        {% elseif product.is_new %}
            <span class="product-badge new">جديد</span>
        {% endif %}

        {# Wishlist Button #}
        <button class="product-wishlist" onclick="salla.wishlist.toggle({{ product.id }})" aria-label="إضافة للمفضلة">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
        </button>

        {# Quick Add Button (on hover) #}
        {% if product.is_available and not product.has_options %}
        <button class="product-quick-add" onclick="salla.cart.add({{ product.id }})" aria-label="إضافة للسلة">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            إضافة سريعة
        </button>
        {% endif %}
    </div>

    <div class="product-info">
        {# Brand #}
        {% if product.brand %}
        <div class="product-brand">{{ product.brand.name }}</div>
        {% endif %}

        {# Name #}
        <a href="{{ product.url }}" class="product-name">{{ product.name }}</a>

        {# Price #}
        <div class="product-price">
            {{ product.price }} {{ store.currency }}
            {% if product.is_on_sale %}
                <span class="old">{{ product.regular_price }} {{ store.currency }}</span>
            {% endif %}
        </div>

        {# Rating #}
        {% if product.rating > 0 %}
        <div class="product-rating">
            {% for i in 1..5 %}
                {% if i <= product.rating %}
                    <svg class="star filled" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                {% else %}
                    <svg class="star" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                {% endif %}
            {% endfor %}
        </div>
        {% endif %}
    </div>
</div>
